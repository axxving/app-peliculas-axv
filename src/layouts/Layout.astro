---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <!-- Metadatos -->
    <meta charset="utf-8" />
    <meta name="author" content="axxving" />
    <meta
      name="description"
      content="App Web que te recomienda peliculas segun el genero que prefieras, aleatoriamente o puedes buscar el trauler de la pelicula que te interese ver."
    />
    <meta
      name="keywords"
      content="Peliculas, aburrido, genero, estrenos, 2024, peliculas, animacion, cine, aventura, accion, anime"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/imgs/logo-transparente.png" />
    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <!-- Iconos de Bootstrap -->
    <!--SVG -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/bootstrap-icons.svg"
    />
    <!--CSS-->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css"
    />

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"></script>

    <!-- Titulo -->
    <title>Pelitoria | {title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
  }
</style>
